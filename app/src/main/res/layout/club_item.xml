<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivClubImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        tools:src="@drawable/redo"
        />

    <TextView
        android:id="@+id/tvClubName"
        android:layout_toEndOf="@+id/ivClubImage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        tools:text="Club name"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        >
    </TextView>
    <TextView
        android:id="@+id/playedMatches"
        android:layout_toEndOf="@+id/tvClubName"
        android:layout_width="30dp"
        android:layout_height="30dp"
        tools:text="30"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:gravity="center"
        >
    </TextView>

    <TextView
        android:id="@+id/wonMatches"
        android:layout_toEndOf="@+id/playedMatches"
        android:layout_width="30dp"
        android:layout_height="30dp"
        tools:text="12"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:gravity="center"
        >
    </TextView>

    <TextView
        android:id="@+id/drawMatches"
        android:layout_toEndOf="@+id/wonMatches"
        android:layout_width="30dp"
        android:layout_height="30dp"
        tools:text="3"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:gravity="center"
        >
    </TextView>
    <TextView
        android:id="@+id/lostMatches"
        android:layout_toEndOf="@+id/drawMatches"
        android:layout_width="30dp"
        android:layout_height="30dp"
        tools:text="15"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:textSize="15sp"
        android:gravity="center"
        >
    </TextView>
    <TextView
        android:id="@+id/goalDifference"
        android:layout_toEndOf="@+id/lostMatches"
        android:layout_width="30dp"
        android:layout_height="30dp"
        tools:text="-15"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        >
    </TextView>
    <TextView
        android:id="@+id/points"
        android:layout_toEndOf="@+id/goalDifference"
        android:layout_width="40dp"
        android:layout_height="30dp"
        tools:text="100"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:gravity="center"
        >
    </TextView>

</RelativeLayout>